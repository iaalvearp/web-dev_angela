---
interface Props {
    text: string,
    id?: string
}

const { text, id } = Astro.props
---

<button id={ id } class="py-1 px-4 border border-[var(--secondary)] hover:bg-[var(--secondary)] text-[var(--secondary)] hover:text-[var(--primary)] scale-100 active:scale-90 rounded-sm duration-300">{ text }</button>