---
interface Props {
    color: string,
}

const { color } = Astro.props
---

<div id={ color } style=`background-color: ${color};` class=`simon-btn w-1/3 max-w-40 aspect-square outline outline-[1rem] outline-[var(--secondary)] scale-100 opacity-100 rounded cursor-pointer duration-300`></div>

<style>
    .pressed {
        outline: var(--accent);
        scale: .9;
        opacity: .5;
    }
</style>